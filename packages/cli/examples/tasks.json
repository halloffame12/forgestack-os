{
  "tasks": [
    {
      "name": "Build TypeScript",
      "command": "tsc",
      "cwd": "./"
    },
    {
      "name": "Run Linter",
      "command": "npm run lint",
      "cwd": "./"
    },
    {
      "name": "Run Tests",
      "command": "npm test",
      "cwd": "./"
    },
    {
      "name": "Format Code",
      "command": "npx prettier --write .",
      "cwd": "./"
    }
  ],
  "parallel": false,
  "stopOnError": true
}
