{
    "name": "forgestack-os-cli",
    "version": "0.3.4",
    "description": "ForgeStack OS CLI - Generate production-ready full-stack SaaS applications",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "type": "module",
    "bin": {
        "forgestack": "./dist/index.js"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "test": "vitest run",
        "lint": "eslint src --ext .ts",
        "prepare": "npm run build",
        "prepublishOnly": "npm run lint && npm run test && npm run build"
    },
    "keywords": [
        "cli",
        "generator",
        "saas",
        "full-stack"
    ],
    "author": {
        "name": "Sumit Chauhan",
        "url": "https://github.com/halloffame12"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/halloffame12/forgestack-os.git"
    },
    "bugs": {
        "url": "https://github.com/halloffame12/forgestack-os/issues"
    },
    "homepage": "https://github.com/halloffame12/forgestack-os#readme",
    "engines": {
        "node": ">=20"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^13.0.0",
        "ejs": "^3.1.10",
        "execa": "^5.1.1",
        "fs-extra": "^11.2.0",
        "inquirer": "^9.2.22",
        "ora": "^5.4.1",
        "validate-npm-package-name": "^6.0.0"
    },
    "devDependencies": {
        "@types/ejs": "^3.1.5",
        "@types/fs-extra": "^11.0.4",
        "@types/inquirer": "^9.0.7",
        "@types/node": "^22.10.7",
        "@types/validate-npm-package-name": "^4.0.2",
        "@typescript-eslint/eslint-plugin": "^8.18.0",
        "@typescript-eslint/parser": "^8.18.0",
        "eslint": "^9.16.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "vitest": "^2.1.8"
    }
}
